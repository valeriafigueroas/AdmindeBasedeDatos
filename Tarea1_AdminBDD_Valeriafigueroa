CREATE DATABASE DIASLALOBRABLES 

CREATE TABLE DIAS (TIPO_DIA VARCHAR, PERIODO VARCHAR(20), HORAS INT)

INSERT INTO DIAS VALUES ('LABORABLE', 'DE PUNTA', 10)
