CREATE TABLE CATALOGO_DIAS (ID_DIAS INT PRIMARY KEY, LABORABLE VARCHAR(10), SABADO VARCHAR(10), DOMINGO VARCHAR(10), FERIADO VARCHAR(10))

CREATE TABLE PERIODOS (ID_PERIODO INT PRIMARY KEY, DE_PUNTA VARCHAR(10), INTERMEDIOS VARCHAR(10), DE_VALLE VARCHAR(10))

CREATE TABLE HORAS (ID_HORA INT PRIMARY KEY, HORARIO1 INT, HORARIO2 INT, HORARIO3 INT, HORARIO4 INT)
